form#form-login(action='/' method='POST')
  .fixed-top
    .container-fluid.bg-light
      .row.align-items-center.justify-content-center
        .col-md-2.pt-3
          .form-group
            select#inputState.form-control(name='country')
              option(selected='' value="") Country
              option(value='us') USA
              option(value='in') India
              option Maruti
              option Tesla
        .col-md-2.pt-3
          .form-group
            select#inputState.form-control(name='category')
              option(selected='' value="") Category
              option(value="business") Business
              option(value="entertainment") entertainment
              option(value="general") General
              option(value="health") Health
              option(value="science") Science
              option(value="sports") Sports
              option(value="technology") Technology
        .col-md-2.pt-3
          .form-group
            input#email.form-control(type='text' name='keys' placeholder='search by keys' value='')
        .col-md-2.pt-3
          button.btn.btn-success.btn-block(type='submit') Search
section.our-webcoderskull.padding-lg(style='margin-top:15px;')
  .container
    .col-md-12.pt-3
      h6
        each data in params
          <span id="lxd" class="badge badge-warning">#{data}</span>
    .row.heading.heading-icon
      if ers
        h2(style="color: red") #{ers}
      else 
        h2 Your News 
    if data.length > 0
      each val in data
        h1 #{val.author}
        ul.row
          li.col-12.col-lg-12
            .cnt-block.equal-hight(style='height: 430px;')
              figure
                a(href=val.url)
                  img.img-responsive(src=val.urlToImage alt='Image URL')
              <p> Click on the image to visit full news </p>
              h3
                a(href=val.url)
                  | #{val.title}
              if val.description
                - var str = val.description.split(' ').slice(0, 100).join(' ');
              p #{str}